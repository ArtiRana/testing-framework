<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="MyShopTestSuite" verbose="1" >
    <test name="Test in  Windows-Chrome" >
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="os" value=" windows"></parameter>

        <classes>
            <class name="com.qa.demo.LoginTest" />
            <!--<class name="com.qa.demo.ShoppingTests" />-->
        </classes>
    </test>
    <test name="Test in OSx-firefox" >
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="os" value="OSx"></parameter>

        <classes>
            <class name="com.qa.demo.LoginTest" />
            <class name="com.qa.demo.ShoppingTests" />
        </classes>
    </test>

</suite>
